{
  "name": "passhub",
  "version": "0.0.1-alpha.0",
  "description": "A password manager",
  "main": "dist/main.js",
  "scripts": {
    "storybook": "start-storybook -p 2334 -c .storybook",
    "start-main": "webpack --config webpack/main.dev.config.js && electron dist/main.js",
    "start-renderer": "webpack-dev-server --config webpack/renderer.dev.config.js",
    "build-main": "webpack --config webpack/main.prod.config.js",
    "build-renderer": "webpack --config webpack/renderer.prod.config.js",
    "build": "npm run build-main && npm run build-renderer",
    "clean": "rimraf ./dist ./release ./store.passhub",
    "prepack": "npm run clean && npm run build",
    "pack": "electron-builder"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test,webpack}/**/*.{js,ts,tsx,json,css,md}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ],
    "src/**/*.{ts,tsx}": [
      "tslint --project ./tsconfig.json --fix",
      "git add"
    ]
  },
  "build": {
    "asar": true,
    "productName": "Passhub",
    "appId": "com.varharrie.passhub",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "package.json"
    ],
    "win": {
      "icon": "/build/icons/win/icon.ico",
      "target": [
        {
          "target": "7z",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/varHarrie/passhub.git"
  },
  "keywords": [],
  "author": "varHarrie<varharrie@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/varHarrie/passhub/issues"
  },
  "homepage": "https://github.com/varHarrie/passhub#readme",
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-knobs": "^5.1.9",
    "@storybook/react": "^5.1.9",
    "@types/node": "^12.6.2",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/react-router": "^5.0.3",
    "@types/react-router-dom": "^4.3.4",
    "@types/storybook__addon-actions": "^3.4.3",
    "@types/storybook__addon-knobs": "^5.0.2",
    "@types/storybook__react": "^4.0.2",
    "@types/styled-components": "^4.1.18",
    "@types/uuid": "^3.4.5",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.6",
    "copy-text-to-clipboard": "^2.1.0",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^3.0.0",
    "electron": "^11.5.0",
    "electron-builder": "^21.0.15",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "mobx": "^5.11.0",
    "mobx-react-lite": "^1.4.1",
    "persiston": "^0.1.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hot-loader": "^4.12.6",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "remixicon": "^1.3.1",
    "rimraf": "^2.6.3",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "styled-components": "^4.3.2",
    "tslint": "^5.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.3",
    "url-loader": "^2.0.1",
    "uuid": "^3.3.2",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@types/i18next-xhr-backend": "^1.4.2",
    "i18next": "^17.0.6",
    "i18next-xhr-backend": "^3.0.0",
    "react-i18next": "^10.11.4"
  }
}
